<h2>New Post</h2>

<%#= render partial: "form" %>

<%#= Call form_for and pass an identifying object - here the symbol :post - to tell form_for helper what the form is form is for
  The form builder object - f - builds labels and text fields
  submit on the f object creates the submit button
  %>

<%= form_for :post, link_to: posts_path do |f| %>
  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :title %><br>
    <%= f.text_area :title %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>


  <p>
    <%= f.submit %>
  </p>
<% end %>

<form action="/posts" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"
